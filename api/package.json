{
  "name": "haads-api",
  "version": "3.0.0",
  "description": "Harberger Ads API server",
  "main": "app.js",
  "engines": {
    "node": "10.1.0",
    "npm": "^6.4.1"
  },
  "scripts": {
    "dbsync": "node bin/dbsync",
    "lint": "eslint --fix ./ --ignore-path .gitignore",
    "lint:watch": "LINT_ONLY=1 node ./bin/dev.js",
    "lint:nofix": "eslint ./ --ignore-path .gitignore",
    "lint:strict": "NODE_ENV=production eslint ./ --ignore-path .gitignore",
    "dev": "node ./bin/dev.js",
    "dev:simple": "node --inspect app.js",
    "test": "node ./bin/test.js",
    "test:record": "TEST_RECORD_MODE=1 node ./bin/test.js",
    "test:once": "jest -i --bail",
    "migrate": "node ./bin/migrate.js",
    "start": "node app.js",
    "start:worker": "RUN_MODES=QUEUE node app.js",
    "start:web": "RUN_MODES=API node app.js",
    "deploy:production": "git push origin origin/master:production --no-verify"
  },
  "license": "ISC",
  "dependencies": {
    "@koa/cors": "^2.2.1",
    "async": "^2.6.1",
    "async-exit-hook": "^2.0.1",
    "axios": "^0.18.0",
    "basic-auth": "^2.0.1",
    "bcryptjs": "^2.4.3",
    "bluebird": "^3.5.1",
    "camelcase": "^5.0.0",
    "camelcase-keys-deep": "^0.1.0",
    "cron-parser": "^2.5.0",
    "cson-parser": "^3.0.0",
    "csvtojson": "^2.0.8",
    "date-fns": "^1.29.0",
    "debug": "^3.1.0",
    "decamelize": "^2.0.0",
    "decamelize-keys": "^1.1.0",
    "escape-string-regexp": "^1.0.5",
    "eth-sig-util": "^1.4.2",
    "google-libphonenumber": "^3.1.4",
    "js-money": "^0.6.3",
    "jsonwebtoken": "^8.2.1",
    "koa": "^2.5.0",
    "koa-bodyparser": "^4.2.0",
    "koa-router": "^7.4.0",
    "lodash": "^4.17.10",
    "lodash-deep": "^2.0.0",
    "logdna": "^2.0.4",
    "moment-timezone": "^0.5.21",
    "nconf": "^0.10.0",
    "nodemailer": "^4.6.4",
    "pg": "^7.4.1",
    "pg-hstore": "^2.3.2",
    "plaid": "^2.6.2",
    "promise-delay": "^2.1.0",
    "require-directory": "^2.1.1",
    "semver": "^5.5.0",
    "sequelize": "^4.37.6",
    "superagent": "^3.8.2",
    "tunnel-exec": "^0.1.2",
    "uuid": "^3.2.1",
    "validator": "^3.27.0"
  },
  "devDependencies": {
    "chokidar": "^2.0.3",
    "clarify": "^2.1.0",
    "colors": "^1.2.1",
    "cson": "^5.1.0",
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-async-await": "0.0.0",
    "eslint-plugin-import": "^2.11.0",
    "eslint-plugin-jest": "^21.15.1",
    "husky": "^1.0.0-rc.9",
    "jest": "^22.4.3",
    "nock": "^9.6.1",
    "node-pg-migrate": "^3.3.0",
    "nodemon": "^1.17.5",
    "stack-trace": "0.0.10",
    "supertest": "^3.0.0",
    "timekeeper": "^2.1.2",
    "trace": "^3.1.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint:nofix",
      "pre-push": "npm run lint:strict && npm run test:once"
    }
  },
  "jest": {
    "testEnvironment": "node",
    "setupTestFrameworkScriptFile": "./tests/setup-test-env.js",
    "globalSetup": "./tests/global-setup.js",
    "globalTeardown": "./tests/global-teardown.js",
    "testRegex": "./tests/.*\\.test\\.js"
  }
}
